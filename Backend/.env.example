# NASA Gigapixel Explorer API - Environment Configuration
# Copy this file to .env and update with your values

# ===========================
# Application Settings
# ===========================
APP_NAME=NASA Gigapixel Explorer API
APP_VERSION=1.0.0
DEBUG=False
LOG_LEVEL=INFO
API_PREFIX=/api

# ===========================
# Database Configuration
# ===========================
# For development (SQLite)
DATABASE_URL=sqlite:///./nasa_explorer.db

# For production (PostgreSQL with PostGIS)
# DATABASE_URL=postgresql://user:password@localhost:5432/nasa_explorer
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=nasa_explorer
# DB_USER=postgres
# DB_PASSWORD=your_secure_password

# ===========================
# Redis Configuration (Optional)
# ===========================
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379

# ===========================
# CORS Configuration
# ===========================
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# For production, add your frontend domain:
# CORS_ORIGINS=https://your-frontend-domain.com,http://localhost:3000

# ===========================
# Tile Generation Settings
# ===========================
TILE_SIZE=256
TILE_FORMAT=jpg
TILE_QUALITY=85
MAX_ZOOM=20
GDAL_PROCESSES=4

# ===========================
# Upload Settings
# ===========================
# Maximum upload size in bytes (default: 10GB)
MAX_UPLOAD_SIZE=10737418240

# ===========================
# Celery Configuration (Optional)
# ===========================
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ===========================
# Security
# ===========================
# IMPORTANT: Change this in production!
SECRET_KEY=your-secret-key-change-in-production-use-strong-random-string
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ===========================
# AWS S3 Configuration (Optional)
# ===========================
USE_S3=False
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_BUCKET_NAME=your-bucket-name
# AWS_REGION=us-east-1
